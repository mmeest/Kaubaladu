<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Kaubaladu</title>
    <style>
        .jumbotron {
            text-align: center;
            background: linear-gradient(90deg, rgba(13,122,176,1) 0%, rgba(9,109,214,1) 50%, rgba(41,41,168,1) 50%, rgba(14,11,70,1) 100%);
            margin-top: 14px;
        }

            .jumbotron > img {
                width: 60vw;
            }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Kaubaladu", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.Identity.IsAuthenticated && User.Identity.Name == "admin")
                    {
                        <li>@Html.ActionLink("Tootenimekiri", "Index", "Goods")</li>
                        <li>@Html.ActionLink("Kasutajanimekiri", "Index", "Users")</li>
                        <li>@Html.ActionLink("Statistika", "Stat", "Users")</li>
                        <li><a>Kasutaja - @User.Identity.Name</a></li>
                        <li>@Html.ActionLink("Logi välja", "Logout", "Account")</li>
                    }
                    else if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Tootenimekiri", "Index", "Goods")</li>
                        <li>@Html.ActionLink("Lisa toode", "Create", "Goods")</li>
                        <li><a>Kasutaja - @User.Identity.Name</a></li>
                        <li>@Html.ActionLink("Logi välja", "Logout", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Registreeri", "Signup", "Account")</li>
                        <li>@Html.ActionLink("Logi sisse", "Login", "Account")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
